<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>編集ページ</h1>
      <%= form_with model:@book,local: true do |f| %>
        <div class="form-group">
         <label>本の題名</label><br>
         <%= f.text_field :title %>
       </div>
        <div class="form-group">
         <label>本の感想</label><br>
         <%= f.text_area :body %>
       </div>
        <div class="form-group">
         <%= f.submit '投稿', class: "btn btn-success" %>
       </div>
      <% end %>
    </div>
  </div>
</div>